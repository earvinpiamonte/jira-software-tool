{
  "manifest_version": 2,
  "name": "Jira Software Tool",
  "short_name": "jira-software-tool",
  "description": "A Google Chrome extension for Jira Software. Easily copy issue/ ticket ID, title and URL to clipboard.",
  "author": "earvinpiamonte.com",
  "version": "0.2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "chrome/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "index.html?page=Popup",
    "default_title": "Open Jira Software Tool"
  },
  "options_page": "index.html?page=Options",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "192": "images/192.png",
    "512": "images/512.png"
  }
}